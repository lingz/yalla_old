<div id="detailed-container" class="fluid-container">
  <div class="row-fluid">
    <div class="detailled-half span6">
      <div class="detailled-row event-detail row-fluid">
        <div class="span2">
          <i class="icon-calendar icon-large-black"></i>
        </div>
        <div class="span10">
          <h5 class="event-parameter"> 
            <%= @event.start_time.advance(hours: 4).strftime("%A %e %B") %><%= " - " + @event.end_time.advance(hours: 4).strftime("%A %e %B") if @event.start_time.day != @event.end_time.day %> 
          </h5>
        </div>
      </div>
      <div class="detailled-row event-detail row-fluid">
        <div class="span2">
          <i class="icon-large-black icon-time"></i>
        </div>
        <div class="span10">
          <h5 class="event-parameter">  
            <%= @event.start_time.advance(hours:4).strftime("%l:%M %p") %> - <%= @event.end_time.advance(hours: 4).strftime("%l:%M %p") %>
          </h5>
        </div>
      </div>
      <div class="detailled-row event-detail row-fluid">
        <div class="map-row span2">
          <i class="icon-large-black icon-map-marker"></i>
        </div>
        <div class="span10">
          <h5 class="event-parameter">  
            <% if @event.location.nil? %>
              N/A
            <% else %>
              <%= @event.location %>
            <% end %>
          </h5>
        </div>
      </div>
      <div class="detailled-row event-detail row-fluid">
        <div class="span2">
          <i class="icon-large-black icon-envelope"></i>
        </div>
        <div class="span10">
          <h5 class="event-parameter">Attendees: <%= @event.user_events.count + 1 %></h5>
        </div>
      </div>
      <div class="detailled-row event-detail row-fluid">
        <div class="span2">
          <i class="icon-large-black icon-user"></i>
        </div>
        <div class="span10">
          <h5 class="event-parameter"> <%= @event.user.name %></h5>
        </div>
      </div>
    </div>
    <div class="detailled-image-wrap detailled-half span6">
      <div class="detailled-image" style="background-image: url(      
        <% if @event.image.include? "nyudefault" %>
          /assets/nyuad.jpg
        <% else %>
          <%= @event.image %>
        <% end %>
        ); width: 100%; height: 100%; z-index: 2; " >
      </div>
    </div>
  </div>
  <div class="row-fluid">
    <div class="detailled-description span9">
      <%= @event.description.gsub /\n/, "<br />" %>
    </div>
  </div>
</div>
